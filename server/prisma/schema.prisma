// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Persona {
  id               String    @id @unique @default(uuid())
  nombres          String
  primer_apellido  String
  segundo_apellido String
  correo           String    @unique
  run              String
  fono             Fono[]
  personal         Personal?
  paciente         Paciente?
}

model Fono {
  id         String  @id @unique @default(uuid())
  numero     String
  persona_id String
  persona    Persona @relation(fields: [persona_id], references: [id])
}

model Rol {
  id       String     @id @unique @default(uuid())
  cargo    String
  personal Personal[]
}

model Personal {
  id            String  @id @unique @default(uuid())
  persona_id    String  @unique
  cuenta_activa Boolean
  persona       Persona @relation(fields: [persona_id], references: [id])
  rol           Rol?    @relation(fields: [rol_id], references: [id])
  auth          Auth?
  ficha         Ficha[]
  rol_id        String? @unique
}

model Auth {
  id          String   @id @unique @default(uuid())
  password    String
  personal_id String   @unique
  personal    Personal @relation(fields: [personal_id], references: [id])
}

model Prevision {
  id       String     @id @unique @default(uuid())
  nombre   String
  tipo     String
  paciente Paciente[]
}

model Paciente {
  id               String      @id @unique @default(uuid())
  fecha_nacimiento String
  jornada          String
  plan_estudios    String
  semestre         String
  ucm              Boolean
  seguro_MOK       Boolean
  persona_id       String      @unique
  persona          Persona     @relation(fields: [persona_id], references: [id])
  prevision_id     String
  prevision        Prevision   @relation(fields: [prevision_id], references: [id])
  documento        Documento[]
  ficha            Ficha[]
}

model Documento {
  id          String   @id @unique @default(uuid())
  tipo        String
  url         String
  paciente_id String
  paciente    Paciente @relation(fields: [paciente_id], references: [id])
}

model Ficha {
  id                      String   @id @unique @default(uuid())
  fecha                   String
  motivo_consulta         String
  presion_sistolica       Int
  presion_diastolica      Int
  frecuencia_cardiaca     Int
  frecuencia_respiratoria Int
  temperatura             Float
  saturacion              Int
  hgt                     Int
  eva                     Int
  procedimiento           String
  paciente_id             String
  paciente                Paciente @relation(fields: [paciente_id], references: [id])
  personal_id             String
  personal                Personal @relation(fields: [personal_id], references: [id])
}
